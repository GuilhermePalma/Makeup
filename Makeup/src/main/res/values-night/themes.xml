<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Maquiagem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royal_blue</item>
        <item name="colorPrimaryVariant">@color/cerise_dark</item>
        <item name="colorOnPrimary">@color/white_light</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cerise</item>
        <item name="colorSecondaryVariant">@color/royal_blue</item>
        <item name="colorOnSecondary">@color/white_light</item>

        <!-- Implementação do Dark Theme. Definição do Background e Texto -->
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:textColor">@color/white_light</item>
        <item name="android:textColorPrimary">@color/white_light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Desativa a ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="ThemeOverlay.Maquiagem.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_900</item>
        <item name="appWidgetTextColor">@color/light_blue_200</item>
    </style>


</resources>